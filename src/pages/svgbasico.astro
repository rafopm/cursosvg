---
import Layout from "../layouts/Layout.astro";
import { Code } from "astro:components";
---

<Layout>
    <div>
        <h1>Creando un SVG básico</h1>

        <h2>Rectángulos</h2>
        <Code
            code={`<svg width="400" height="400">
            <rect x="50" y="100" fill="red" width="200" height="80"/>
            <rect x="200" y="150" fill="blue" width="200" height="80"/>
            <rect x="200" y="70" fill="purple" width="200" height="80"/>
</svg>`}
            lang="html"
        />

        <svg width="400" height="400">
            <rect x="50" y="100" fill="red" width="200" height="80"/>

            <rect x="200" y="150" fill="blue" width="200" height="80"/>

            <rect x="200" y="70" fill="purple" width="200" height="80"/>

        </svg>

        <h2>Círculos</h2>

        <Code
            code={`<svg width="400" height="800">
            <circle cx="300" cy="200" r="100" fill="red" />
            <ellipse cx="300" cy="500"  rx="100" ry="50" fill="red" />
</svg>`}
            lang="html"
        />
        <svg width="400" height="800">
            <circle cx="300" cy="200" r="100" fill="red" />
            <ellipse cx="300" cy="500"  rx="100" ry="50" fill="grey" />
        </svg>
    </div>
</Layout>

<style></style>
